#: import la kivy.adapters.listadapter
#: import utils kivy.utils
#: import ok main

CareAppRoot:

<CareAppRoot>:
    ServiceTypeList:

<ServiceTypeListItem>:
    halign: 'center'
    valign: 'middle'
    height: '75dp'
    text: root.name
    # Resizing
    text_size: self.size
    font_size: '16dp'
    size_hint_y: None
    on_press: app.root.show_services_list(root.name)
    color: 0, 0, 0, 1
    selected_color: 255, 255, 255, 1
    deselected_color: 255, 255, 255, 1

<ServiceListItem>:
    halign: 'center'
    valign: 'middle'
    height: '75dp'
    text: root.name
    text_size: self.size
    font_size: '16dp'
    size_hint_y: None
    on_press: app.root.new_service_info_page(root.name)
    color: 0, 0, 0, 1  # Text color
    selected_color: 255, 255, 255, 1
    deselected_color: 255, 255, 255, 1

<ServiceTypeList>:
    spacing: 2
    padding: 2
    orientation: 'vertical'
    canvas.before:
        Color:
            # Text color
            rgba: 255, 255, 255, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        canvas.before:
            Color:
                # Text color
                rgba: 0, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size
        halign: 'center'
        valign: 'middle'
        height: '50dp'
        text: 'Select a type of service'
        text_size: self.size
        # Text color
        color: 255, 255, 255, 1
        font_size: '18dp'
        size_hint_y: None
    ListView:
        spacing: 10
        adapter: root.list_adapter
        

<ServiceList>:
    spacing: 2
    orientation: 'vertical'
    list_view: list_view
    canvas.before:
        Color:
            rgba: 255, 255, 255, 1  # Text color
        Rectangle:
            pos: self.pos
            size: self.size
    AnchorLayout:
        anchor_y: 'top'
        height: '50dp'
        size_hint_y: None
        GridLayout:
            cols: 2
            row_default_height: '50dp'
            row_force_default: True
            Button:
                text: 'Back'
                size_hint_x: None
                on_press: app.root.show_service_types()
            Label:
                halign: 'center'
                valign: 'middle'
                text: 'Select a service from the list for more information'
                text_size: self.size
                font_size: '18dp'
                color: 255, 255, 255, 1
                canvas.before:
                    Color:
                        # Text color
                        rgba: 0, 0, 0, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
    ListView:
        id: list_view
        adapter: la.ListAdapter(data=[], cls=ok.ServiceListItem, args_converter=root.disability_converter)

<ServiceInfoPage>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size
        AnchorLayout:
            height: '30dp'
            anchor_y: 'top'
            anchor_x: 'left'
            size_hint_y: None
            Button:
                text: 'Back'
                height: '30dp'
                size_hint: None, None
                on_press: app.root.show_services_list(app.root.service_type)
        RstDocument:
            text: root.text

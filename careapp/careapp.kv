#: import la kivy.adapters.listadapter
#: import utils kivy.utils
#: import ok main

CareAppRoot:

<CareAppRoot>:
    ServiceTypeList:

<ServiceTypeListItem>:
    height: '75dp'
    text: root.name
    text_size: self.size
    size_hint_y: None
    text_pos: 0, self.height / 2
    on_press: app.root.show_services_list(root.name)
    selected_color: utils.get_color_from_hex('#206C49')
    deselected_color: utils.get_color_from_hex('#206C49')
    canvas.before:
        Color:
            rgba: 255, 255, 255, 1
        Rectangle:
            pos: self.pos
            size: self.size

<ServiceListItem>:
    height: '75dp'
    text: root.name
    text_size: self.size
    size_hint_y: None
    on_press: app.root.new_service_info_page(root.name)
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#206C49')
        Rectangle:
            pos: self.pos
            size: self.size

<ServiceTypeList>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#206C49')
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: 'Select a service category from the list below for more services.'
        text_size: self.size
        font_size: '16dp'
        size_hint_y: None
    ListView:
        adapter: root.list_adapter
        

<ServiceList>:
    orientation: 'vertical'
    list_view: list_view
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#206C49')
        Rectangle:
            pos: self.pos
            size: self.size
    AnchorLayout:
        anchor_y: 'top'
        height: '30dp'
        size_hint_y: None
        GridLayout:
            cols: 2
            row_default_height: '30dp'
            row_force_default: True
            Button:
                text: 'Back'
                size_hint_x: None
                on_press: app.root.show_service_types()
            Label:
                text: 'Select a service from the list for more information.'
    ListView:
        id: list_view
        adapter: la.ListAdapter(data=[], cls=ok.ServiceListItem, args_converter=root.disability_converter)

<ServiceInfoPage>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: utils.get_color_from_hex('#206C49')
            Rectangle:
                pos: self.pos
                size: self.size
        AnchorLayout:
            height: '30dp'
            anchor_y: 'top'
            anchor_x: 'left'
            size_hint_y: None
            Button:
                text: 'Back'
                height: '30dp'
                size_hint: None, None
                on_press: app.root.show_services_list(app.root.service_type)
        RstDocument:
            text: root.text

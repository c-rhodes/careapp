#: import la kivy.adapters.listadapter
#: import utils kivy.utils
#: import ok main

CareAppRoot:

<CareAppRoot>:
    ServiceTypeList:

<ServiceTypeListItem>:
    size_hint_y: None
    height: '75dp'
    text: root.name
    on_press: app.root.show_services_list(root.name)

<ServiceListItem>:
    size_hint_y: None
    height: '75dp'
    text: root.name
    on_press: app.root.new_service_info_page(root.name)

<ServiceTypeList>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#206C49')
        Rectangle:
            pos: self.pos
            size: self.size

<ServiceList>:
    orientation: 'vertical'
    list_view: list_view
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#206C49')
        Rectangle:
            pos: self.pos
            size: self.size
    AnchorLayout:
        anchor_y: 'top'
        height: '40dp'
        size_hint_y: None
        GridLayout:
            cols: 2
            row_default_height: '40dp'
            row_force_default: True
            Button:
                text: 'Back'
                size_hint_x: None
                on_press: app.root.show_service_types()
            Label:
                text: 'Select a service from the list for more information.'
    ListView:
        id: list_view
        adapter: la.ListAdapter(data=[], cls=ok.ServiceListItem, args_converter=root.disability_converter)

<ServiceInfoPage>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: utils.get_color_from_hex('#206C49')
            Rectangle:
                pos: self.pos
                size: self.size
        AnchorLayout:
            anchor_y: 'top'
            anchor_x: 'left'
            size_hint_y: None
            Button:
                text: 'Back'
                height: '30dp'
                size_hint: None, None
                on_press: app.root.show_services_list(app.root.service_type)
        Label:
            text: root.name
            font_size: 30
